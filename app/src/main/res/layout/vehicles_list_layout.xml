<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:layout_marginBottom="3dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="7dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
          >

                <ImageView
                    android:id="@+id/Vimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_car_24"
                    />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/id_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Php6,6500"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/vehicles_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Vehicle ID #:"
                        android:textSize="11sp" />
                <TextView
                    android:id="@+id/vehicles_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="11sp"
                    android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Plate #:"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                    android:id="@+id/vehicles_platenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plate Number"
                        android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/inactive_border"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_capacity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_car"
                        android:text=" 7"
                        android:fontFamily="@font/poppins"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - Seat Minivan"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/inactive_border"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_capacity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_seat"
                        android:text=" 7"
                        android:fontFamily="@font/poppins"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Passenger(s)"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@drawable/inactive_border">

                <TextView
                    android:id="@+id/id_transmission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_trans_remote"
                    android:fontFamily="@font/poppins"
                    android:text=" Transmission"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/inactive_border"
                    android:layout_marginLeft="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/id_ac"
                    android:text=" Air Conditioner"
                    android:drawableStart="@drawable/ic_ac"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </LinearLayout>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:id="@+id/select_vehiclebtn"
                    android:text="Select"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    />

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
