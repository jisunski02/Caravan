<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectvehicle"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar_productviewing"
        layout="@layout/application_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/vehicle_border"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idLocation"
            android:text="Location"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", Pangasinan"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idPickDate"
        android:text="Pickupdate"
        android:textSize="12sp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=", "
        android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPickhour"
            android:text="Pickuphour"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idReturnDate"
            android:text="ReturnDate"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", "
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/idReturnHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReturnHour"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/all"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_cancel_cardbgcolor"
                android:text="All"
                android:fontFamily="@font/poppins_bold"
                android:textAllCaps="false"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/SUV"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_suv_cardbgcolor"
                android:text="SUV"
                android:fontFamily="@font/poppins_bold"
                android:textAllCaps="false"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/VAN"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_van_cardbgcolor"
                android:text="VAN"
                android:fontFamily="@font/poppins_bold"
                android:textAllCaps="false"
                android:textColor="@color/white"/>

        </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/VehicleRecyclerView"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


</LinearLayout>
</LinearLayout>