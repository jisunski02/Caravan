<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    tools:context=".selectpackage">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"
        android:layout_gravity="start"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/appbar_productviewing"
            layout="@layout/application_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/reg_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_up"
                android:checked="true"
                android:fontFamily="@font/poppins"
                android:text=" REGULAR PACKAGE"
                android:textColor="@color/MainColor"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="left"
                    android:text="@string/regular_package"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/ic_check"
                    android:text="Car fee"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/ic_baseline_close_24"
                    android:text="With Driver"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableEnd="@drawable/ic_check"
                    android:text="Self drive"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/ic_check"
                    android:text="Full to full fuel policy"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <RadioButton
                android:id="@+id/com_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"
                android:background="@color/background"
                android:text=" COMPLETE PACKAGE"
                android:textColor="@color/MainColor"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_bot"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/complete_package"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_check"
                    android:text="Gas"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/ic_check"
                    android:text="Car fee"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/ic_check"
                    android:text="With driver"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/ic_check"
                    android:text="Parking fee"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>


        </RadioGroup>


        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idLocation"
            android:text="Location"
            android:textSize="7sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPickDate"
            android:text="Pickupdate"
            android:textSize="7sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPickhour"
            android:text="Pickuphour"
            android:textSize="7sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idReturnDate"
            android:text="ReturnDate"
            android:textSize="7sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idReturnHour"
            android:text="ReturnHour"
            android:textSize="7sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idRentdays"
            android:text="ReturnHour"
            android:textSize="7sp"
            />
            -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:fontFamily="@font/poppins"
                android:text="NEXT"
                android:textColor="@color/background"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>